<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
   

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/Contents/fonts/fontawesome-free-5.15.4-web/css/all.css">
    <!-- <script src="chart/chart.min.js"></script> -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="/Contents/css/sewingRealtime/reset.css">
    <link rel="stylesheet" href="/Contents/css/sewingRealtime/dashboard.css">
    <script src="/contents/libs/ajax/jquery.js"></script>
    <script src="/contents/libs/chart/chartjs-plugin/jquery.js"></script>
    <link href="/contents/libs/datepicker/css/datepicker.css" rel="stylesheet" />
    <script src='/JS/HBI/MEC/sewingRealtime/chart.config.js'></script>
    <link rel="stylesheet" href="/contents/libs/toastr-master/build/toastr.css" />
    <script lang="javascript" src="/contents/libs/exceljs/xlsx.full.min.js"></script>
    <title>dashboard</title>
</head>

<body>

    <%- include('partials/header') -%>
    <div clas="dashboard">
        <div class="container_body container-fluid">
            <div class="row">
                <div class="col-xxl-8">
                    <h2 class="chart_title">Sewing needle real time (h)</h2>
                    <div class="card ">
                        <div class="chart_header card-header">
                            <div class="chart_header_dropdown dropdown">
                                <a href="/innovation/realtime/detailDashboard"
                                    style="padding-right: 10px; font-size:23px; text-decoration: none"
                                    class="fas fa-chart-bar"></a>
                                <i class="fas fa-download" onclick="download_report()"></i>
                                <i class="fas fa-filter" id="dropdownMenu2" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                </i>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                    <p class="chart_header_title">Zone</p>
                                    <li><select class="chart_header_select form-select" id="zone" name="zone"
                                            onchange="zoneChanged(this)">
                                        </select>
                                    </li>
                                    <p class="chart_header_title">Line</p>
                                    <li><select class="chart_header_select form-select" id="line" name="line">
                                            <option class="chart_header_option" value="ALL">ALL</option>
                                            <!-- lấy dữ liệu từ function zoneChanged() -->
                                        </select>
                                    </li>
                                    <div class="row">
                                        <div class="chart_header_date_col1 col col-lg-6">
                                            <p class="chart_header_title">From Date</p>
                                        </div>
                                        <div class="chart_header_date_col2 col col-lg-6">
                                            <p class="chart_header_title">To Date</p>
                                        </div>
                                    </div>

                                    <li>
                                        <div class="row">
                                            <div class="chart_header_date_col1 col col-lg-6">
                                                <input type="text" id="timeCheckIn"
                                                    class="chart_header_date form-control" />
                                            </div>
                                            <div class="chart_header_date_col2 col col-lg-6">
                                                <input type="text" id="timeCheckOut"
                                                    class="chart_header_date form-control" />
                                            </div>
                                        </div>
                                    </li>
                                    <p class="chart_header_title">Shift</p>
                                    <li>
                                        <select class="chart_header_select form-select" id="shift" name="shift">
                                            <option class="chart_header_option" value="ALL">ALL</option>
                                            <option class="chart_header_option" value="1">Shift 1</option>
                                            <option class="chart_header_option" value="2">Shift 2</option>
                                        </select>
                                    </li>
                                    <li>
                                        <div class='chart_header_submit'>
                                            <!-- <i class="chart_header_submit_i fas fa-download" data-bs-toggle="modal" data-bs-target="#staticBackdrop"></i> -->
                                            <button class='chart_header_submit_bt' type='submit' onclick="submit()"
                                                id="submit">submit</button>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div>
                            <canvas id="myChart"></canvas>
                        </div>
                    </div>
                </div>
                <div class='col-xxl-4'>
                    <div class="row">
                        <div class='col-xxl-12 '>
                            <h2 class="chart_title">Sewing needle real time ratio %</h2>
                            <div class="card ">
                                <div class="chart_header card-header">
                                </div>
                                <canvas id="myChart1"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class='col-xxl-12'>
                            <h2 class="chart_title">OEE %</h2>
                            <div class="card ">
                                <div class="chart_header card-header">
                                </div>
                                <canvas id="myChart2"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src='/JS/HBI/MEC/sewingRealtime/chart.build.js'></script>
        <script src='/JS/HBI/MEC/sewingRealtime/dashboard.js'></script>
    </div>
    <script src="/contents/libs/toastr-master/build/toastr.min.js"></script>
    <script src="/contents/libs/datepicker/js/bootstrap-datepicker.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</body>

</html>