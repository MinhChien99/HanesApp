<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
   <link rel="stylesheet" href="/font/fontawesome-free-5.15.4-web/css/all.css">
   <link rel="stylesheet" href="/stylesheets/reset.css">
   <link rel="stylesheet" href="/stylesheets/machine.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" integrity="sha512-3pIirOrwegjM6erE5gPSwkUzO+3cTjpnV9lexlNZqvupR64iZBnOOTiiLPb9M36zpMScbmUNIcHUqKD47M719g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  
   <title>Quản lý máy may</title>
</head>
<body>
    <div class="main">
      <%- include('../partials/header') -%>
      <div class="content">
          <div class="content-layout">
          <% if (String(locals.line) != '') { %>
            <h2 class="content-layout-header">LINE <%= lineName %>: <%=line[0]['line_name'] %></h2>           
              <div class="content-layout-line" id="content-layout-line">
              </div>
          <% } else {%> 
                <h1 style="color:#ecf0f1">COMING SOON ....</h1>           
          <% }%>  
          <div class="modal-machine-details modal fade" id="modal-machine" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="machine-modal modal-dialog modal-dialog-centered">
              <div class="machine-modal modal-content">
                <div class=" modal-header">
                  <h5 class="modal-title" id="exampleModalLabel" ><h5 id="operation">12</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                  <div class="modal-body">
                    <p class="modal-body-title" id="title"></p>
                    <div class="input-group mb-3">
                      <span class="modal-body-id input-group-text">ID máy: </span>
                      <span class="modal-body-id input-group-text" id="machine-tag"></span>
                      <span class="modal-body-id-adjust input-group-text" data-bs-toggle="dropdown"><i class="fas fa-edit"></i></span>
                      <input type="number" id="newID" class="modal-body-id-input form-control dropdown-menu" placeholder="Nhập id của máy mới">
                    </div>
                    <div class="input-group mb-3">
                      <span class="modal-body-run input-group-text">Thời gian máy chạy: </span>
                      <span class="modal-body-run input-group-text" id="run-time"></span>            
                    </div>
                    <div class="input-group mb-3">
                      <span class="modal-body-loss input-group-text">Thời gian máy hỏng: </span>
                      <span class="modal-body-loss input-group-text" id="loss-time"></span>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" id="saveMachine" class="btn btn-primary" data-bs-dismiss="modal"  onclick="saveMachine();">Lưu lại</button>
                  </div>
              </div>
            </div>
          </div>                 
          </div>
        </div>
      <%- include('../partials/footer')%>
    </div>
    <script src="/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/jquery/dist/jquery.min.js"></script>
    <script> 
      let lineName='<%= lineName%>';
      $( document ).ready(function() {
        updateLayoutLine( lineName);
      }); 
    </script>
    <script src="/javascripts/machine.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>